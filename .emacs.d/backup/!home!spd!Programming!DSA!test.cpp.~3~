#include "stack.cpp"
//#include "stack.h"
#include <iostream>
void clear_stdin() {
  while (getc(stdin) != '\n') {
  }
  return;
}
int main() {
  Stack<char> s(4);
  int x;
  char y;
  while (true) {
    printf("Enter 1 for push 2 for pop and 3 for print: ");
    scanf("%d", &x);
    switch (x) {
    case 1:
      clear_stdin();
      printf(">>> ");
      scanf("%c", &y);
      s.push(y);
      break;
    case 2:
      s.pop();
    case 3:
      s.print();
    default:
      exit(0);
    }
  }
  return 0;
}
