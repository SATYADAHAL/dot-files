//setting default character info
Character::Character()
{
	name = "Hermione";//change this name and style how code is written
	CharHp = 100;
	strength = rand() % 100 + 1;
	 defence = rand() % 100 + 1;

}

Character::Character(std::string _name, int _CharHp)
{
	name = _name;
	CharHp = _CharHp;

}




//deltDamage is a random damage between 1-100
int Character::deltDamage(int damagedealt)
{
	srand(time(0));
	//int damagedealt;
	damagedealt = rand() % 100;
	std::cout << name << " is doing " << damagedealt << "damage." << std::endl;
	CharHp = damagedealt;
	return damagedealt;

}//don't forget this all is for idea i have to do another one similar to it, where all code will be diffrent and format of code will also be completely diffrent


