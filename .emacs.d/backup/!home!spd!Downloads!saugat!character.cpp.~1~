void Character::takeDamage(int damageTaken)
{
	srand(time(0));



	damageTaken = rand() % 100;

	
	int newCharHp = CharHp - damageTaken;

	 std::cout << "you have been hit! Damage taken " << damageTaken << "your new hp is  " << newCharHp << "be careful" << std::endl;
	 //after being hit by enemy several time hp may increase so try to manage it as well


}

bool Character::isAlive()
{
	if (CharHp <= 0)
	{
		return false;
		std::cout << "you are dead" << std::endl;

	}
	else
		return true;

}

std::string Character::getname()
{
	return name;//string()....satya change

}//here get name set name uper case lower case may cause problem
void Character::setName(std::string _name)
{
	if (_name.length() > 0)
		name = _name;

	else
		std::cout << "please enter valid character name" << std::endl;

}


void Character::displayInfo()
{
	std::cout << "Name: " << name << ",HP:" << CharHp << "Strength" << strength << std::endl;
}




