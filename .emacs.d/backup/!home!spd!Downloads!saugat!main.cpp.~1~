#include<time.h>
#include<stdlib.h>
#include "main.h"



std::string name;
int damageTaken;
std::string warriorName;
std::string mageName;
std::string paladinName;
char lvlUp;
bool choice;
//sir told to not to keep these outside like this keep them inside class,may be or any idea.........?


void main() {

	Mage m1;
	m1.setName(name);
	m1.displayMageInfo();

	srand(time(NULL));
	//Asking for a name input
	std::cout << "What is the name?" << std::endl;
	std::cin >> name;
	std::cout << "\n\n";

	//first character
	Character c1;
	c1.setName(name);
	//c1.strength;satya change
	c1.displayInfo();
	std::cout << "Would you like to level up a class? Y/N " << std::endl;
	std::cout << "\n\n";
	std::cin >> lvlUp;
	std::cout << "\n\n";

	//making it if yes then level up and if no then close the program
	if (lvlUp == 'Y' || lvlUp == 'y')
	{
		std::cout << "What class would you like" << std::endl;
		std::cout << "Mage" << std::endl;
		std::cout << "Warrior" << std::endl;
		std::cout << "\n\n";
		std::cin >> choice;
		std::cout << "\n\n";
	}
	//if the player choice is no exit the program
	if (lvlUp == 'N' || lvlUp == 'n')
	{
		exit(0);
	}
	if (choice == 'Mage')
	{
		Mage m1;
		m1.setName(name);
		m1.displayMageInfo();
	}

}