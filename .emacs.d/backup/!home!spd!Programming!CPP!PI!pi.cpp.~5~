#include <iostream>
#include <math.h>
#define increment 0.0000064;

int main() {
  long double x, y, circle = 0.0, total = 0.0;
  for (x = 0; x <= 1;) {
    for (y = 0; y <= 1;) {
      if (x == 0 || y == 0) {
        circle++;
      } else if (sqrtl(x * x + y * y) <= 1) {
        circle++;
      }
      total++;
      y = y + increment;
    }
    x = x + increment;
  }
  printf("%Lf", 4 * circle / total);
  return 0;
}
