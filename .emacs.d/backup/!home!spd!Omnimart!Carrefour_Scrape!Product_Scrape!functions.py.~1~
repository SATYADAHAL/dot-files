def get_brand(Bsoup):
    try:
        return Bsoup.find_all("div",class_="prod-brand")[0].string
    except:
        return ''
def get_name(Bsoup):
    try:
        return Bsoup.find_all("div",class_="prod-title")[0].string
    except:
        return ''

def get_full_name(Bsoup):
    return get_brand(Bsoup)+" "+get_name(Bsoup)
def get_price(Bsoup):
    try:
        if len(Bsoup.find_all("div",class_="strike_price_promo pt-2"))>0:
            return 0
            #return Bsoup.find_all("div",class_="strike_price_promo pt-2")[0].string.strip()
        return Bsoup.find_all("input",class_="item_price")[0]['value']
    except:
        return 0
def get_image(Bsoup):
    try:
        return Bsoup.find_all("picture")[0].find_all("img")[0]['src']
    except:
        return ''
def get_description(Bsoup):
    try:
        val=Bsoup.find_all("div",class_="pdp-enbrefSection")[0].find_all("div",class_="value")[0].string.strip().replace("," , " ")
        return val
    except IndexError:
        return ""
def get_short_description(Bsoup):
    final_str=[]
    try:
        lst=Bsoup.find_all("div",class_="threesection-content")[0].find_all("div")
        for items in lst:
            if(items.string!=None):
                final_str.append(items.string.strip().replace("," , " "))
                final_str.append("\n")
        return "".join(final_str)
    except:
        return ""

    
def get_final_list(Bsoup):
    final_lst=[]
    
    name=get_full_name(Bsoup)
    if(name==""):
        print("Producnt Not found")
        return -1
    final_lst.append(name)
    
    price=get_price(Bsoup)
    if(price==0):
        print("Price not found")
        return -1
    try:
        final_lst.append(float(price))
    except ValueError:
        print("Cannot convert to float")
        return -1
    
    image_url=get_image(Bsoup) 
    if(image_url==''):
        print("Cannot get image")
        return -1
    final_lst.append(image_url)
    
    description=get_description(Bsoup)
    if(description==""):
        final_lst.append("No Description Avaibale")
    else:
        final_lst.append(description)
    
    short_desc=get_short_description(Bsoup)
    if(short_desc==""):
        final_lst.append("No Description Available")
    else:
        final_lst.append(short_desc)
    return final_lst
