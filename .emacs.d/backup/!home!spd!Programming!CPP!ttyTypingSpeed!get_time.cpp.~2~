#include "get_time.h"

extern bool timer_started;
extern int initial_time;

int current_time() {
  time_t seconds;
  time(&seconds);
  return seconds;
}
void print_time(int default_time) {
  mv_xy(1, 1);
  if (timer_started) {
    printf("%02d", default_time - (current_time() - initial_time));
  } else {
    printf("15");
  }
}
