#include<bits/stdc++.h>
using namespace std;

class Stack
{
    public:
    int top;
    int maxSize;
    int* array;
    Stack(int max)
    {
        top=-1;
        maxSize=max;
        array=new int[max];
    }
    int isFull()
    {
        if(top==maxSize-1)
        cout<<"Error!! StackOverflow"<<endl;
        return top==maxSize-1;
    }

    int isEmpty()
    {
        if(top==-1)
        cout<<"Will not be able to pop minSize reached"<<endl;
        return top==-1;
    }
    void push(int item)
    {
        if(isFull()) return;
        array[++top]=item;
        cout<<"We have pushed "<<item<<" to stack"<<endl;
    }
    int pop()
    {
        if(isEmpty()) return INT_MIN;
	printf("Pop succesfull\n");
        return array[top--];
    }
    int peek()
    {
        if(isEmpty()) return INT_MIN;
        return array[top];
    }
};

int main()
{
    Stack stack(5);
        int inp=0;
    while(true)
    {
      printf("Enter 1 for push 2 for pop: ");
      scanf("%d",&inp);
      if(inp==1){
	int val;
	printf("Enter integer:" );
	scanf("%d",&val);
	stack.push(val);
      }
      else if(inp==2){
	  stack.pop();
      }
      
    }

}
