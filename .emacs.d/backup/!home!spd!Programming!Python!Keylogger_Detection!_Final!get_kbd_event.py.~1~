import re

def get_kbd_event_numbers():
    """This fucntion gets kbd event numbers

    Returns:
        List: list of kbd event number as string
    """
    event_num_list=[]
    handlers_file_path="/proc/bus/input/devices"
    with open(handlers_file_path) as file:
        lines_in_file=file.readlines()
        for line in lines_in_file:
            if(re.match("H: Handlers=sysrq kbd.*\n$",line)): #Getting line with "sysrq kbd"
                words_in_line= line.strip().split(" ")
                for words in words_in_line:
                    if(re.match("event*",words)):
                        event_num=words[5:]
                        event_num_list.append(event_num)
        print(f"Total {len(event_num_list)} keyboards found")
        return event_num_list


